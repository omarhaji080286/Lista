<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/layout_category_in_overiew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_purchases_nb"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toStartOf="@+id/img_caddy"
                android:layout_marginTop="5dp"
                android:text="10"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/img_caddy"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/shopping_basket_yellow"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:contentDescription="@string/description"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/txt_category_name_in_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/category_s_name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_category_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/fruit"
                android:layout_below="@id/txt_category_name_in_overview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/description" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>