<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_category_group"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@drawable/category_bckgrd_in_my_goods">

    <ImageView
        android:id="@+id/ic_category"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|center"
        android:src="@drawable/steak"
        android:layout_weight="1"
        android:contentDescription="@string/category_icon" />

    <TextView
        android:id="@+id/txt_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_s_name"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="96"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ll_cart_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_goods_to_buy_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/ic_caddy"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/arrow"
            android:src="@drawable/ic_cart_empty"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_arrow_in_category"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/arrow"
        android:src="@drawable/arrow_down"
        android:layout_weight="1"/>



</LinearLayout>