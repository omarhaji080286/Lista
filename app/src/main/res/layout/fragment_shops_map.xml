<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview_shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="99"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_shop"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" >

            <ImageView
                android:id="@+id/img_shop_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/steak"
                android:contentDescription="@string/description"/>

            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toEndOf="@id/img_shop_icon"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txt_shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop type"
                android:layout_below="@id/img_shop_icon"/>

            <TextView
                android:id="@+id/txt_shop_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adress"
                android:layout_below="@id/txt_shop_type"/>

            <TextView
                android:id="@+id/txt_shop_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:layout_below="@id/txt_shop_adress"/>

            <TextView
                android:id="@+id/txt_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:layout_below="@id/txt_shop_email"/>

            <TextView
                android:id="@+id/txt_shop_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_below="@id/txt_shop_phone"/>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Order"
                style="@style/Button"
                android:visibility="gone"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>