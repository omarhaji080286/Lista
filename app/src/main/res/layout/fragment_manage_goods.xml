<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_manage_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:columnCount="2"
        android:rowCount="4"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_good_name"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:text="@string/good_s_name"
            android:layout_row="1"
            android:layout_column="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_gravity="start|center"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="@drawable/ic_search"
                android:contentDescription="@string/search_goods" />

            <EditText
                android:id="@+id/edit_good2"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="95"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/hint_good_to_add"/>

            <ImageView
                android:id="@+id/img_highlight_off2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/ic_cancel_cross"
                android:contentDescription="@string/search_goods"
                android:visibility="invisible" />

        </LinearLayout>

    </GridLayout>


    <TextView
        android:id="@+id/txt_goods_in_db"
        style="@style/TextViewLabel"
        android:layout_width="match_parent"
        android:text="@string/existing_goods" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_manage_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>