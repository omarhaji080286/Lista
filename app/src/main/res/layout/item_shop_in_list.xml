<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop type"
                android:layout_below="@id/txt_shop_name"/>

            <TextView
                android:id="@+id/txt_shop_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adress"
                android:layout_below="@id/txt_shop_type"/>

            <TextView
                android:id="@+id/txt_shop_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:layout_below="@id/txt_shop_adress"/>

            <TextView
                android:id="@+id/txt_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:layout_below="@id/txt_shop_email"/>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Order"
                style="@style/Button"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>