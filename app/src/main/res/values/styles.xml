<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/softBlueGreenEnd</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:maxLength">30</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewLabel" parent="Theme.AppCompat.Light">
        <item name="android:gravity">center|start</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_content_size_average</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_average</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RedButton">
        <item name="android:background">@drawable/red_blood_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="LabelForFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:background">@drawable/rectangle_smooth_corners</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/blueGrey</item>
        <item name="android:textSize">@dimen/fab_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Footer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fab_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>

    </style>

    <style name="FAB" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/softBlueGreen</item>
        <item name="android:layout_marginStart">@dimen/fab_margin_start</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CategoryIndicator" parent="Theme.AppCompat.Light">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BtnAmountSelected">
        <item name="android:background">@drawable/btn_amount_selected</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/btn_amount_height_size</item>
    </style>

    <style name="BtnAmount">
        <item name="android:background">@drawable/btn_amount</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">@dimen/btn_amount_height_size</item>
    </style>

    <style name="WelcomeItem">
        <item name="android:background">@drawable/linear_border</item>
        <item name="android:layout_margin">@dimen/text_content_margin_large</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WelcomeTextItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WelcomeImgItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/welcome_img_item_width</item>
        <item name="android:layout_height">@dimen/welcome_img_item_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="LogoImg">
        <item name="android:layout_height">@dimen/logo_size_height</item>
        <item name="android:layout_width">@dimen/logo_size_width</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimpleText">
        <item name="android:textSize">@dimen/text_content_size_average</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="flagCountry">
        <item name="android:layout_width">@dimen/flag_country_size_width</item>
        <item name="android:layout_height">@dimen/flag_country_size_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
